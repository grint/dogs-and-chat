ul.list-group
	li.list-group-item('*ngFor'="let user of users" '(click)'="loadUserClick.emit(user.id)" id="user-{{user.id}}")
		//-TODO: User avatar
		i.fa.fa-user.mr-2

		span.initials('*ngIf'="isMessagesShown")
			| {{user.details.name | slice:0:1 }}.{{user.details.lastname | slice:0:1 }}.
		
		span.fullname('*ngIf'="!isMessagesShown")
			| {{user.details.name}} {{user.details.lastname}}